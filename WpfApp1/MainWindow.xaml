<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Vizcarra" Click="Button_Click_1" Background="Red" Height="30" Width="200"></Button>
            <DataGrid x:Name="dgProfesores" AutoGenerateColumns="True"></DataGrid>
            <Button Content="Cursos" Background="Green" Height="30" Width="200" Click="Button_Click_2"></Button>
            <DataGrid x:Name="dgCursos"></DataGrid>
            <TextBox x:Name="txtNombres" Height="50" Width="200"></TextBox>
            <TextBox x:Name="txtApellidos" Height="50" Width="200"></TextBox>
            <Button Content="Agregar" Background="Yellow" Height="30" Width="200" Click="Button_Click_3" ></Button>
        </StackPanel>
        
    </Grid>
</Window>
